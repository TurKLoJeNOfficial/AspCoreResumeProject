@using EntityLayer.Concrete
@model List<WriterMessage>

<div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="messageDropdown">
    <h6 class="p-3 mb-0">Messages</h6>
    <div class="dropdown-divider"></div>
    @foreach(var item in Model){
    <a class="dropdown-item preview-item" href="/AdminMessage/AdminMessageDetails/@item.WriterMessageID">
        <div class="preview-thumbnail">
            <img src="~/corona-free-dark-bootstrap-admin-template-1.0.0/template/assets/images/message.png" alt="image" class="rounded-circle profile-pic">
        </div>
        <div class="preview-item-content">
            <p class="preview-subject ellipsis mb-1">@item.SenderName size yeni mesaj gönderdi</p>
        </div>
    </a>
    }
    <p class="p-3 mb-0 text-center">4 new messages</p>
</div>
