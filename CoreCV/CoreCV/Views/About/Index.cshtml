@model EntityLayer.Concrete.About
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


@using (Html.BeginForm("Index", "About", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Hakkımda Düzenleme Sayfası</h4>
                <form class="forms-sample">
                    <div class="form-group">
                        @Html.HiddenFor(x=>x.AboutID, new{@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Başlık</label>
                        @Html.TextBoxFor(x=>x.Title, new{@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Yaş</label>
                        @Html.TextBoxFor(x=>x.Age, new{@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Mail Adresi</label>
                        @Html.TextBoxFor(x=>x.Mail, new{@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Telefon Numarası</label>
                        @Html.TextBoxFor(x=>x.Phone, new{@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Adres</label>
                        @Html.TextBoxFor(x=>x.Address, new{@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Resim Yolu</label>
                        @Html.TextBoxFor(x=>x.ImageUrl, new{@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Açıklama</label>
                        @Html.TextAreaFor(x=>x.Description,12,8, new{@class="form-control"})
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button class="btn btn-dark">Cancel</button>
                </form>
            </div>
        </div>
    </div>
}


