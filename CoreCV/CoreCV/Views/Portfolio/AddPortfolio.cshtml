@model EntityLayer.Concrete.Portfolio
@{
    ViewData["Title"] = "AddPortfolio";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("AddPortfolio", "Portfolio", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yeni Proje Ekleme Sayfası</h4>
                <form class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputEmail3">Platform</label>
                        <input type="text" class="form-control" name="Platform">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Name</label>
                        <input type="text" class="form-control" name="Name">
                        @Html.ValidationMessageFor(x=>x.Name)
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Resim Yolu 1</label>
                        <input type="text" class="form-control" name="ImageUrl">
                        @Html.ValidationMessageFor(x=>x.ImageUrl)
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Proje URL</label>
                        <input type="text" class="form-control" name="ProjectUrl">
                        @Html.ValidationMessageFor(x=>x.ProjectUrl)
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Resim Yolu 2</label>
                        <input type="text" class="form-control" name="ImageUrl2">
                        @Html.ValidationMessageFor(x=>x.ImageUrl2)
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Ücret</label>
                        <input type="text" class="form-control" name="Price">
                        @Html.ValidationMessageFor(x=>x.Price)
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Bitirme Oranı</label>
                        <input type="text" class="form-control" name="Value">
                        @Html.ValidationMessageFor(x=>x.Value)
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button class="btn btn-dark">Cancel</button>
                </form>
            </div>
        </div>
    </div>
}
