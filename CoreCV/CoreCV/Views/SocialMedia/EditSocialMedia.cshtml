@model EntityLayer.Concrete.SocialMedia
@{
    ViewData["Title"] = "EditSocialMedia";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


@using (Html.BeginForm("EditSocialMedia", "SocialMedia", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Hesap Düzenleme Sayfası</h4>
                <form class="forms-sample">
                    <div class="form-group">
                        <input type="hidden" class="form-control" name="SocialMediaID" value="@Model.SocialMediaID">
                    </div>

                    <div class="form-group">
                        <label for="exampleFormControlSelect1">Platform</label>
                        <select class="form-control form-control-lg" id="exampleFormControlSelect1" name="Icon">
                            <option value="Github">Github</option>
                            <option value="Facebook">Facebook</option>
                            <option value="Twitter">Twitter</option>
                            <option value="Instagram">Instagram</option>
                            <option value="Youtube">Youtube</option>
                            <option value="Linkedln">Linkedln</option>
                            <option value="Twitch">Twitch</option>
                        </select>

                        <script>
                            var iconValue = "@Model.Name";
                            var selectElement = document.getElementById("exampleFormControlSelect1");

                            for (var i = 0; i < selectElement.options.length; i++) {
                                if (selectElement.options[i].value === iconValue) {
                                    selectElement.options[i].selected = true;
                                    break;
                                }
                            }
                        </script>


                    </div>

                    <div class="form-group">
                        <label for="exampleInputEmail3">Url</label>
                        <input type="text" class="form-control" name="Url" value="@Model.Url">
                    </div>

                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button class="btn btn-dark">Cancel</button>
                </form>
            </div>
        </div>
    </div>
}


