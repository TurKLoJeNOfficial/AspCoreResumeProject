@model EntityLayer.Concrete.Feature
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


@using (Html.BeginForm("Index", "Feature", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Öne Çıkan Düzenleme Sayfası</h4>
                <form class="forms-sample">
                    <div class="form-group">
                        @Html.HiddenFor(x=>x.FeatureID, new{@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Name</label>
                        @Html.TextBoxFor(x=>x.Header, new{@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Tarih</label>
                        @Html.TextBoxFor(x=>x.Name, new{@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Resim Yolu</label>
                        @Html.TextBoxFor(x=>x.Title, new{@class="form-control"})
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button class="btn btn-dark">Cancel</button>
                </form>
            </div>
        </div>
    </div>
}



