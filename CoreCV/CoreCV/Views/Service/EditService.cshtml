@model EntityLayer.Concrete.Service
@{
    ViewData["Title"] = "EditService";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


@using (Html.BeginForm("EditService", "Service", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Hizmet Düzenleme Sayfası</h4>
                <form class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputName1">ID</label>
                        @Html.TextBoxFor(x=>x.ServiceID, new{@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Başlık</label>
                        @Html.TextBoxFor(x=>x.Title, new{@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Resim Yolu</label>
                        @Html.TextBoxFor(x=>x.ImageUrl, new{@class="form-control"})
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button class="btn btn-dark">Cancel</button>
                </form>
            </div>
        </div>
    </div>
}
