@model EntityLayer.Concrete.Skill
@{
    ViewData["Title"] = "AddSkill";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


@using (Html.BeginForm("AddSkill", "Skill", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yeni Yetenek Ekleme Sayfası</h4>
                <form class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputEmail3">Yetenek Başlığı</label>
                        <input type="text" name="Title" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Yetenek Oranı</label>
                        <input type="text" name="Value" class="form-control" />
                    </div>

                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <button class="btn btn-dark">Cancel</button>
                </form>
            </div>
        </div>
    </div>
}