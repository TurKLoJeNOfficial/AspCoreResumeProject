@using EntityLayer.Concrete
@model List<Experience>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Deneyimler &nbsp; &nbsp; <a href="/Experience/AddExperience/" class="btn btn-outline-light">EKLE</a></h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık.</th>
                            <th>Tarih</th>
                            <th>SİL</th>
                            <th>GÜNCELLE</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model){
                        <tr>
                            <td>@item.ExprerienceID</td>
                            <td>@item.Name</td>
                            <td>@item.Date</td>
                            <td><a href="/Experience/DeleteExperience/@item.ExprerienceID" class="btn btn-outline-danger">SİL</a></td>
                                <td><a href="/Experience/EditExperience/@item.ExprerienceID" class="btn btn-outline-success">GÜNCELLE</a></td>

                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>